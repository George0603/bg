<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mytest.MainActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" />
        </LinearLayout>
    </ScrollView>

    <com.bg.view.FlowRadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/boy_height"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="男生身高"
            android:textColor="@drawable/boy_height_selector" />

        <RadioButton
            android:id="@+id/girl_height"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="女生身高"
            android:textColor="@drawable/boy_height_selector" />

        <RadioButton
            android:id="@+id/boy_weight"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="男生体重"
            android:textColor="@drawable/boy_height_selector" />

        <RadioButton
            android:id="@+id/girl_weight"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="女生体重"
            android:textColor="@drawable/boy_height_selector" />

        <RadioButton
            android:id="@+id/boy_head"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="男生头围"
            android:textColor="@drawable/boy_height_selector" />

        <RadioButton
            android:id="@+id/girl_head"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="女生头围"
            android:textColor="@drawable/boy_height_selector" />

        <RadioButton
            android:id="@+id/boy_bmi"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="男生BMI"
            android:textColor="@drawable/boy_height_selector" />

        <RadioButton
            android:id="@+id/girl_bmi"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="女生BMI"
            android:textColor="@drawable/boy_height_selector" />
    </com.bg.view.FlowRadioGroup>

</RelativeLayout>